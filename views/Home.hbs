    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid">
        <nav>
            <div class="Main_Logo">E MINDS</div>
            <ul>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="HomeNav">Home</a></li>
                {{!-- <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>  --}}
            </ul>
            <a href="/auth/profile" class="button">My propfile</a>  
            <img src="/Photos/Logo2black.png" class="logo2">
                
        </nav>
        <div style="display: flex; margin-top:-60px; background-color:">
        <div class="Fields_box">
            <h>Fields</h>
            <button class="openButton" onclick="openForm()">&plus;</button>
            {{#if alert_message}}
                <h3 class="alert alert-danger mt-3" style="font-size: medium">{{alert_message}} </h3>
            {{/if}}
            {{#if message }}
                <h3 class="No_Field">No field Exist</h3>
            {{/if}}
            <div>
            {{#each contents}}
                <a href="topics/?name={{this.FIELD_NAME}}" class="Field_text">&#x2022; {{this.FIELD_NAME}}<br></a>
            {{/each}}
            </div>
            </div>
            <div class="Messages">
                 <h style="font-weight:700; margin-left:30px; font-size: 20px;">RECENT ACTIVITIES</h>
                 <br>
                 <br>
            {{#each body}}
                <div class="issue">
                  <p class="IMAIL">&#x2022;{{this.IMAIL}}</p>
                  <h style="font-size: 22px;">{{this.ISSUE}}</td>
                </div>
                <br>
                <div class="replies">
                  <p class="EMAIL">&#x2022;{{this.EMAIL}}</p>
                    <p style="font-size: 17px;">{{this.TEXT_BODY}}</p>
                </div>
                <a href="/auth/topics?name={{this.FIELD_NAME}}&tname={{this.TOPIC_NAME}}" class="readmore">Read more...</a>
                <br>
                <hr>
                <br>
            {{/each}}
            </div>
        </div>
            <div class="loginPopup">
                <div class="formPopup" id="popupForm">
                    <form action="/auth/Fields" class="popupformContainer" method="post">
                    <h2>Enter your Field</h2>
                    <label>Field Name:</label>
                    <input type="text" name="FIELD_NAME" required>
                    <br>
                    <button type="submit" value="submit"   class="btn">Add</button>
                    <button type="button" class="btn cancel" onclick="closeForm()">Cancel</button>
                     </form>
                </div>
        </div>
    </div>

    <script>
      function openForm() {
        document.getElementById("popupForm").style.display = "block";
      }
      function closeForm() {
        document.getElementById("popupForm").style.display = "none";
      }
    </script>


